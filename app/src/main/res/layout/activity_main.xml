<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.camisado.myapplication.MainActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Glitter"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/BackgroundIm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space"
            android:background="@color/PaleAqua"
            app:srcCompat="@color/Transparent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:elevation="1dp"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="10dp"
            android:text="BATTLESHIP"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ShipLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BackgroundIm"
            android:layout_below="@+id/imageView4"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ship" />

        <Button
            android:id="@+id/l1_button_start"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_below="@+id/ShipLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:elevation="0dp"
            android:text="START"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp" />

        <Button
            android:id="@+id/l1_button_settings"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/l1_button_credits"
            android:layout_alignStart="@+id/l1_button_credits"
            android:layout_below="@+id/l1_button_credits"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp"
            android:layout_alignEnd="@+id/l1_button_credits" />

        <Button
            android:id="@+id/l1_button_tutorial"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:text="TUTORIAL"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp"
            android:layout_below="@+id/l1_button_start"
            android:layout_alignEnd="@+id/l1_button_start"
            android:layout_alignStart="@+id/l1_button_start" />

        <Button
            android:id="@+id/l1_button_credits"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/l1_button_tutorial"
            android:layout_alignStart="@+id/l1_button_tutorial"
            android:layout_below="@+id/l1_button_tutorial"
            android:text="LEADERBOARD"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp"
            android:layout_alignEnd="@+id/l1_button_tutorial" />

        <Button
            android:id="@+id/l1_button_exit"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/l1_button_settings"
            android:layout_alignStart="@+id/l1_button_settings"
            android:layout_below="@+id/l1_button_settings"
            android:text="EXIT"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp"
            android:layout_alignEnd="@+id/l1_button_settings" />



        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="108dp"
            android:background="@color/PaleAqua"
            android:visibility="visible" />

    </RelativeLayout>

</android.support.v7.widget.ContentFrameLayout>
